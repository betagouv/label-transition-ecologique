{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tet/ui": ["./packages/ui/src/index.ts"],
      "@tet/ui/*": ["./packages/ui/src/*"],

      "@tet/api": ["./packages/api/src/index.ts"],
      "@tet/api/*": ["./packages/api/src/*"],

      // Alias temporaires pour les d√©pendances de l'application
      "ui/*": ["./app.territoiresentransitions.react/src/ui/*"],
      "utils/*": ["./app.territoiresentransitions.react/src/utils/*"],
      "app/*": ["./app.territoiresentransitions.react/src/app/*"],
      "core-logic/*": ["./app.territoiresentransitions.react/src/core-logic/*"],
      "types/*": ["./app.territoiresentransitions.react/src/types/*"],
      "ui": ["./app.territoiresentransitions.react/src/ui/*"],
      "environmentVariables": [
        "./app.territoiresentransitions.react/src/environmentVariables"
      ],

      "@tet/app/*": ["./app.territoiresentransitions.react/src/app/*"],
      "@tet/auth/*": ["./packages/auth/*"],
      "@tet/panier/*": ["./packages/panier/src/*"]
      "@tet/site/*": ["./packages/site/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
