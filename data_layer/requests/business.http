      "obligation_eci": false,
      "parent": null
    },
    {
      "id": "t_2",
      "indicateur_group": "eci",
      "identifiant": "b",
      "valeur_indicateur": null,
      "nom": "Lo",
      "description": "lo !",
      "unite": "kg",
      "obligation_eci": false,
