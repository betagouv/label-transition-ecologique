POST {{api}}/rest/v1/rpc/business_upsert_indicateurs
apikey: {{service}}
Authorization: Bearer {{service}}
Content-Type: application/json

{
  "indicateur_definitions": [
    {
      "id": "t_1",
      "indicateur_group": "eci",
